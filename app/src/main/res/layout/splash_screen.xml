<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true"
    android:gravity="center">

    <ImageView
        android:id="@+id/mapzen_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dip"
        android:src="@drawable/mapzen_logo_big"/>

    <TextView
        android:id="@+id/osm_login_page_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/mapzen_logo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/osm_login_page_text2"
        android:layout_below="@+id/osm_login_page_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0.6b-1234"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/osm_login_page_text2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dip"
        android:gravity="fill_horizontal"
        android:text="@string/loading"
        android:textColor="#000000"
        android:textSize="16sp" />
</RelativeLayout>

